{
  "name": "vscode-extension",
  "displayName": "vscode-extension",
  "description": "An AI-powered VS Code extension that reviews your code, enforces architecture rules, generates smart comments, analyzes complexity, and keeps your project clean, consistent, and scalable.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscode-extension.helloWorld",
        "title": "Hello World"
      },

      {
        "command": "extension.addCodeComments",
        "title": "Add Comments to Code"
      },
      
      {
        "command": "extension.commentSelectedCode",
        "title": "Add Comments to Selected Code"
      }
    ],
    
    "keybindings": [
      {
        "command": "extension.addCodeComments",
        "key": "ctrl+alt+c",
        "when": "editorTextFocus"
      }
    ],

    "submenus": [
      {
        "id": "architext.submenu",
        "label": "Architext"
      }
    ],

    "menus": {
      "editor/context": [
        {
          "submenu": "architext.submenu",
          "when": "editorHasSelection",
          "group": "navigation"
        }
      ],

      "architext.submenu": [
        {
          "command": "extension.commentSelectedCode",
          "when": "editorHasSelection"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.99.0",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.23.0",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "axios": "^1.9.0"
  }
}
