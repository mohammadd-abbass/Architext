
generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id        Int     @id @default(autoincrement())
  name      String
  email     String  @unique
  password  String
  createdAt DateTime @default(now())
  githubId  String?  @unique

  sessions  ArchitectureSession[]
  logs      Log[]

  @@map("users")
}

model ArchitectureSession {
  id        String   @id @default(cuid())
  userId    Int
  status    String   @default("in_progress")
  result    Json?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  messages  ArchitectureMessage[]
  user      User      @relation(fields: [userId], references: [id])

  @@map("architecture_sessions")
}

model ArchitectureMessage {
  id          String   @id @default(cuid())
  sessionId   String
  role        String   // "user" or "assistant"
  content     String
  createdAt   DateTime @default(now())

  session     ArchitectureSession @relation(fields: [sessionId], references: [id])

  @@map("architecture_messages")

}

model Log {
  id         BigInt   @id @default(autoincrement())
  userId     Int   
  ipAddress  String   
  city       String?  
  country    String? 
  userAgent  String?   @db.Text
  latitude   Decimal?  @db.Decimal(10, 7)
  longitude  Decimal?  @db.Decimal(10, 7)
  createdAt  DateTime @default(now()) @updatedAt

  user       User     @relation(fields: [userId], references: [id])

  @@index([userId])
  @@map("logs")
}
