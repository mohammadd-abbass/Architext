{
  "compilerOptions": {
    "target": "ES2022",                  
    "module": "ES2022",                 
    "moduleResolution": "node",
    "lib": ["ES2020"],
    "esModuleInterop": true,             
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",                    
    "rootDir": "src",                    
    "resolveJsonModule": true,           
    "allowSyntheticDefaultImports": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}